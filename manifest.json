{
	"manifest_version": 2,

	"name": "Couponifier.com",
	"short_name": "Couponifier.com",
	"version": "1.0",
	"description": "Get coupons and deals for hundreds of thousands of stores online",
	"author": "Couponifier.com",

	"icons": {
		"16": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	},

	"permissions": [
		"alarms",
		"tabs",
		"storage",
		"activeTab",
		"unlimitedStorage",
		"http://*/",
		"https://*/"
	],
	"content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"css/*.css",
		"js/*.js",
		"libs/*.js",
		"html/*.html",
		"data/*.json",
		"images/*.png",
		"images/*.gif",
		"images/*.jpg"
	],
	"background": {
		"scripts": [
			"js/background/helpers.js",
			"js/background/file-reader.js",
			"js/background.js"
		],
		"persistent": true
	},

	"browser_action": {
		"default_icon": {
			"19": "images/icon.png",
			"38": "images/icon.png"
		},
		"default_title": "Couponifier.com",
		"default_popup": "html/popup.html"
	},
	"options_ui": {
		"chrome_style": true,
		"page": "html/popup.html"
	}
}